<!DOCTYPE html>
<html>
  <head>
    <title>PonselKu</title>
    <%= stylesheet_link_tag "style", media: "all" %>
  </head>
  <body>
    <div id="template">
      <div id="header">
        <h2>PonselKu</h2>
      </div>
      
      <div id="menu">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/news">News</a></li>
          <li><a href="/phones">Smartphone</a></li>
          
        </ul>
      </div>
      <%= link_to 'new', new_phone_path %>
      <div id="badan" >
        <% @phones.each do |phone| %>
        <div class="row">
          <div class="col" style="background-color:lavender;">
            <img src="<%= url_for(@phones.image) if @phone.image.attached? %>" width="100" height="100">
            <%= phone.brand %>
          </div>
         </div> 
         <% end %>
      </div>

      <div id="samping">

      </div>

      
    </div>
  </body>
</html>

